{
  "version": 2,
  "builds": [
    {
      "src": "app_vercel.py",
      "use": "@vercel/python",
      "config": {
        "maxLambdaSize": "50mb",
        "runtime": "python3.9"
      }
    },
    {
      "src": "webapp/**",
      "use": "@vercel/static"
    },
    {
      "src": "manifest.json",
      "use": "@vercel/static"
    }
  ],
  "rewrites": [
    {
      "source": "/webapp/(.*)",
      "destination": "/webapp/$1"
    },
    {
      "source": "/css/(.*)", 
      "destination": "/webapp/css/$1"
    },
    {
      "source": "/manifest.json",
      "destination": "/manifest.json"
    },
    {
      "source": "/test-pad",
      "destination": "/webapp/test-pad.html"
    },
    {
      "source": "/fiori",
      "destination": "/webapp/index-fiori.html"
    },
    {
      "source": "/launchpad",
      "destination": "/webapp/index-launchpad.html"
    },
    {
      "source": "/api/(.*)",
      "destination": "/app_vercel.py"
    },
    {
      "source": "/health",
      "destination": "/app_vercel.py"
    },
    {
      "source": "/",
      "destination": "/webapp/index-launchpad.html"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ],
  "env": {
    "VERCEL": "1",
    "FLASK_ENV": "production"
  }
}