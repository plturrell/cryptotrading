{
  "version": 2,
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "functions": {
    "api/mcp.py": {
      "runtime": "@vercel/python"
    }
  },

  "routes": [
    {
      "src": "/api/mcp/(.*)",
      "dest": "/api/mcp.py"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/$1"
    }
  ]
}