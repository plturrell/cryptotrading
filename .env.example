# Cryptotrading Platform Environment Configuration Template
# Copy this file to .env and fill in your actual values

# Environment
NODE_ENV=development
ENVIRONMENT=development

# Database Configuration (Use your own values)
DATABASE_URL=postgresql://username:password@localhost:5432/cryptotrading_dev
SECRET_KEY=your_secret_key_here
JWT_SECRET_KEY=your_jwt_secret_key_here

# API Keys (Add your actual keys)
PERPLEXITY_API_KEY=your_perplexity_api_key_here
XAI_API_KEY=your_xai_api_key_here
FRED_API_KEY=your_fred_api_key_here

# Cloud Services (Add your actual tokens)
DIGITALOCEAN_TOKEN=your_digitalocean_token_here

# MCP Configuration
MCP_SERVER_PORT=3000
MCP_RATE_LIMIT=100

# Security Configuration
VAULT_URL=https://your-vault-url.com
VAULT_TOKEN=your_vault_token_here

# Monitoring and Observability
OTEL_EXPORTER_OTLP_ENDPOINT=your_otel_endpoint_here
LOG_LEVEL=info

# Trading Configuration
TRADING_MODE=simulation
MAX_POSITION_SIZE=1000
RISK_THRESHOLD=0.05

# Data Sources
YAHOO_FINANCE_ENABLED=true
COINBASE_PRO_ENABLED=false
BINANCE_ENABLED=false