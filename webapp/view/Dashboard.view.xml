<mvc:View
    controllerName="com.rex.cryptotrading.controller.Dashboard"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:core="sap.ui.core">
    
    <Page
        title="{i18n>dashboardTitle}"
        showNavButton="false"
        enableScrolling="true"
        class="sapUiContentPadding">
        
        <content>
            <f:GridContainer
                id="dashboardGrid"
                snapToRow="true">
                <f:layout>
                    <f:GridContainerSettings
                        rowSize="5rem"
                        columnSize="5rem"
                        gap="1rem"/>
                </f:layout>
                <f:layoutXS>
                    <f:GridContainerSettings
                        rowSize="4rem"
                        columnSize="4rem"
                        gap="0.5rem"/>
                </f:layoutXS>
                
                <f:items>
                    <!-- Market Overview Tile -->
                    <GenericTile
                        class="sapUiTinyMarginBegin sapUiTinyMarginTop"
                        header="Market Overview"
                        subheader="Real-time market data"
                        press="onNavigateToMarket"
                        frameType="TwoByOne">
                        <layoutData>
                            <f:GridContainerItemLayoutData
                                columns="4"
                                rows="2"/>
                        </layoutData>
                        <tileContent>
                            <TileContent>
                                <content>
                                    <NumericContent
                                        value="{marketData>/totalMarketCap}"
                                        scale="T"
                                        state="Good"
                                        icon="sap-icon://line-chart"/>
                                </content>
                            </TileContent>
                        </tileContent>
                    </GenericTile>
                    
                    <!-- Portfolio Tile -->
                    <GenericTile
                        class="sapUiTinyMarginBegin sapUiTinyMarginTop"
                        header="Portfolio"
                        subheader="Your investments"
                        press="onNavigateToPortfolio"
                        frameType="TwoByOne">
                        <layoutData>
                            <f:GridContainerItemLayoutData
                                columns="4"
                                rows="2"/>
                        </layoutData>
                        <tileContent>
                            <TileContent>
                                <content>
                                    <NumericContent
                                        value="{portfolio>/totalValue}"
                                        scale="K"
                                        state="{portfolio>/performanceState}"
                                        icon="sap-icon://pie-chart"/>
                                </content>
                            </TileContent>
                        </tileContent>
                    </GenericTile>
                    
                    <!-- Trading Tile -->
                    <GenericTile
                        class="sapUiTinyMarginBegin sapUiTinyMarginTop"
                        header="Trading"
                        subheader="Execute trades"
                        press="onNavigateToTrading"
                        frameType="TwoByOne">
                        <layoutData>
                            <f:GridContainerItemLayoutData
                                columns="4"
                                rows="2"/>
                        </layoutData>
                        <tileContent>
                            <TileContent>
                                <content>
                                    <NumericContent
                                        value="{trading>/activeOrders}"
                                        scale=""
                                        state="Neutral"
                                        icon="sap-icon://cart"/>
                                </content>
                            </TileContent>
                        </tileContent>
                    </GenericTile>
                    
                    <!-- Technical Analysis Tile -->
                    <GenericTile
                        class="sapUiTinyMarginBegin sapUiTinyMarginTop"
                        header="Technical Analysis"
                        subheader="Charts and indicators"
                        press="onNavigateToAnalysis"
                        frameType="TwoByOne">
                        <layoutData>
                            <f:GridContainerItemLayoutData
                                columns="4"
                                rows="2"/>
                        </layoutData>
                        <tileContent>
                            <TileContent>
                                <content>
                                    <NumericContent
                                        value="{analytics>/signals}"
                                        scale=""
                                        state="Critical"
                                        icon="sap-icon://business-objects-experience"/>
                                </content>
                            </TileContent>
                        </tileContent>
                    </GenericTile>
                    
                    <!-- News Tile -->
                    <GenericTile
                        class="sapUiTinyMarginBegin sapUiTinyMarginTop"
                        header="Market News"
                        subheader="Latest updates"
                        press="onNavigateToNews"
                        frameType="TwoByOne">
                        <layoutData>
                            <f:GridContainerItemLayoutData
                                columns="4"
                                rows="2"/>
                        </layoutData>
                        <tileContent>
                            <TileContent>
                                <content>
                                    <NumericContent
                                        value="{news>/unreadCount}"
                                        scale=""
                                        state="Good"
                                        icon="sap-icon://newspaper"/>
                                </content>
                            </TileContent>
                        </tileContent>
                    </GenericTile>
                    
                    <!-- Risk Management Tile -->
                    <GenericTile
                        class="sapUiTinyMarginBegin sapUiTinyMarginTop"
                        header="Risk Management"
                        subheader="Monitor exposure"
                        press="onNavigateToRisk"
                        frameType="TwoByOne">
                        <layoutData>
                            <f:GridContainerItemLayoutData
                                columns="4"
                                rows="2"/>
                        </layoutData>
                        <tileContent>
                            <TileContent>
                                <content>
                                    <NumericContent
                                        value="{risk>/riskScore}"
                                        scale="%"
                                        state="{risk>/riskState}"
                                        icon="sap-icon://shield"/>
                                </content>
                            </TileContent>
                        </tileContent>
                    </GenericTile>
                </f:items>
            </f:GridContainer>
        </content>
    </Page>
</mvc:View>
